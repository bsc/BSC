<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id: note.xml 528 2011-01-13 03:37:23Z eddieajau $ -->
<form>
	<fields>
		<field
			name="id"
			type="hidden"
			class="readonly"
			size="6"
			default="0"
			readonly="true"
			label="COM_ARTOFUSER_FIELD_ID_LABEL"
			/>

		<field
			name="user_id"
			type="user"
			size="50"
			class="inputbox"
			required="true" 
			label="COM_ARTOFUSER_FIELD_USER_ID_LABEL"
			/>

		<field
			name="catid"
			type="category"
			class="inputbox"
			size="1"
			section="com_artofuser_notes"
			label="COM_ARTOFUSER_FIELD_CATEGORY_ID_LABEL">
			<option value="">JLIB_FORM_NO_CATEGORY</option>
		</field>

		<field
			name="subject"
			type="text"
			class="inputbox"
			size="80"
			label="COM_ARTOFUSER_FIELD_SUBJECT_LABEL"
			description="COM_ARTOFUSER_FIELD_SUBJECT_DESC" 
			/>

		<field
			name="body"
			type="editor"
			class="inputbox"
			rows="10"
			cols="80"
			filter="safehtml"
			label="COM_ARTOFUSER_FIELD_BODY_LABEL"
			description="COM_ARTOFUSER_FIELD_BODY_DESC" 
			/>

		<field
			name="published"
			type="radio"
			class="inputbox"
			default="1"
			label="COM_ARTOFUSER_FIELD_PUBLISHED_LABEL"
			description="COM_ARTOFUSER_FIELD_PUBLISHED_DESC" 
			>
			<option value="1">JYES</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="review_time"
			type="calendar"
			class="inputbox"
			label="COM_ARTOFUSER_FIELD_REVIEW_TIME_LABEL"
			description="COM_ARTOFUSER_FIELD_REVIEW_TIME_DESC"
			default="0000-00-00"
			format="%Y-%m-%d"
			/>

		<field
			name="checked_out"
			type="hidden"
			filter="unset"
			/>		

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"
			/>		

		<field
			name="created_user_id"
			type="hidden"
			filter="unset"
			/>		

		<field
			name="created_time"
			type="hidden"
			filter="unset"
			/>		

		<field
			name="modified_user_id"
			type="hidden"
			filter="unset"
			/>		

		<field
			name="modified_time"
			type="hidden"
			filter="unset"
			/>		
	</fields>
</form>