<?xml version="1.0" encoding="utf-8"?>
<!-- see http://docs.joomla.org/Standard_parameter_types -->
<config>
	<fieldset name="component" label="!configLabel!" description="!configLabelDesc!">
	
		<field name="parm_text" type="text" default="parm_text" label="Text param" description="Text param example" />
		
		<field name="@spacer" type="spacer" default="" label="" description="" />
		
		<field name="param_list" type="list" default="value1" label="List param" description="List param example">
			<option value="value1">value 1</option>
			<option value="value2">value 2</option>
			<option value="value3">value 3</option>
		</field>

		<field name="@spacer" type="spacer" default="" label="" description="" />
		
		<field name="param_radio" type="radio" default="value1" label="Radio param" description="Radio Param Example">
			<option value="value1">value 1</option>
			<option value="value2">value 2</option>
			<option value="value3">value 3</option>
		</field>

	</fieldset>
	
	<fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC">
		<field name="rules" type="rules" label="JCONFIG_PERMISSIONS_LABEL" class="inputbox" validate="rules" filter="rules" component="com_mcm" section="component" />
	</fieldset>


</config>
